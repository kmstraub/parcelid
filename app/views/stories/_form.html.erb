<%= form_for @story do |f| %>
	<p>
		<%= f.label :when %><br>
		<%= f.date_field :when %>
	</p>

	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :source %>
		<%= f.text_field :source %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>
